@model Web.Models.News

@{
    ViewData["Title"] = "Create_News";
}

<h2>ДОБАВИТЬ НОВОСТЬ</h2>

<div>
    <a asp-controller="Home" asp-action="Index">Ко всем новостям</a>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create_News">
            <div asp-validation-summary="ModelOnly" asp-controller="Home" method="post" enctype="multipart/form-data" class="text-danger"></div>
            
            <div class="form-group">
                
                <input asp-for="_News" class="form-control" type="text" placeholder="Тема" size="80" />
                <span asp-validation-for="_News" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <textarea asp-for="_Text" placeholder="Написать новость" cols="100" rows="10"></textarea>
                <span asp-validation-for="_Text" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
